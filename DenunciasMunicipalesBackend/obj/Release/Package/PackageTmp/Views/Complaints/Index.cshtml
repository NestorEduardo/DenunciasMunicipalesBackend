@model IEnumerable<DenunciasMunicipalesBackend.Models.Complaint>

@{
    ViewBag.Title = "Denuncias";
}

<h2>Denuncias</h2>

<p>
<a class="btn btn-primary" href="/Complaints/Create">Nueva <span class="glyphicon glyphicon-plus"></span></a>
    
    <table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CaseAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaseAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Image))
                {
                    <img src="@Url.Content(item.Image)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                <a class="btn btn-warning" href="/Complaints/Edit/@item.ComplaintId">Editar<span class="glyphicon glyphicon-edit"></span></a>
                <a class="btn btn-info" href="/Complaints/Details/@item.ComplaintId">Detalles<span class="glyphicon glyphicon-exclamation-sign"></span></a>
                <a class="btn btn-danger" href="/Complaints/Delete/@item.ComplaintId">Eliminar<span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
